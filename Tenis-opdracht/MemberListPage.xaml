<Page x:Class="Tenis_opdracht.MemberListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tenis_opdracht"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Loaded="Page_Loaded"
      Title="MemberListPage">

    <Grid>
        <Grid>
            <DataGrid Name="MemberList" Margin="10,40,10,40" HeadersVisibility="Column" MouseDoubleClick="MemberList_MouseDoubleClick" IsReadOnly="True" />
            <Button Height="20" Width="150" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Name="refresh" Click="refresh_Click">Refresh</Button>
            <Button Height="20" Width="150" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10">Add</Button>
            <TextBox TextChanged="filter_TextChanged" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Name="filter"/>
        </Grid>
    </Grid>
</Page>
